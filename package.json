{
  "name": "theme-dev-toolkit",
  "version": "1.0.0",
  "description": "My custom theme development toolkit",
  "trustedDependencies": [
    "sass"
  ],
  "devDependencies": {
    "@wordpress/eslint-plugin": "^9.0.5",
    "@wordpress/stylelint-config": "^21.31.0",
    "esbuild": "0.18.14",
    "eslint": "^7.27.0",
    "eslint-plugin-prettier": "^3.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "sass": "^1.69.7",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.2.0",
    "stylelint-selector-bem-pattern": "^3.0.1"
  },
  "scripts": {
    "watch:scss": "npx sass --style=expanded ./scss/style.scss ./css/style.css --watch",
