{
  "name": "theme-dev-toolkit",
  "version": "1.0.0",
  "description": "My custom theme development toolkit",
  "trustedDependencies": ["sass"],
  "devDependencies": {
    "browser-sync": "^3.0.2",
    "esbuild": "0.18.14",
    "eslint": "^7.27.0",
    "eslint-plugin-prettier": "^3.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "stylelint": "^14.0.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.2.0",
    "sass": "^1.69.7"
  },
  "scripts": {
    "watch:scss": "npx sass ./src/scss/style.scss ./css/style.css",
    "watch:reload": "npx browser-sync start --proxy 'http://127.0.0.1:5500/' --files='./**/*.css, ./**/*.html, ./**/*.js' --ignore='./node_modules, ./vendor' --watch",
    "dev": "npm-run-all --parallel watch:*"
  }
}
